<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/meeting_reports_padding">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/meeting_reports_detail_paddingBottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textStyle="bold"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30th June 2015 14:10"
            android:id="@+id/meeting_report_date_and_time"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/meeting_reports_detail_paddingBottom" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Written by"
            android:textStyle="bold"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your wealth manager"
            android:id="@+id/meeting_report_writer"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/meeting_reports_detail_paddingBottom" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified on"
                android:id="@+id/meeting_report_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st July 2015"
                android:id="@+id/meeting_reports_date_verification"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discussion on possible assets buying in Eastern Europe"
        android:id="@+id/meeting_reports_verified_topic"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary:"
        android:textStyle="italic|bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/meeting_reports_summary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agreement:"
        android:textStyle="bold|italic" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:id="@+id/meeting_reports_agreement" />
</LinearLayout>