<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/content_margin">

        <TextView
            android:id="@+id/overview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Bisma,"
            android:textSize="@dimen/overview_welcome_msg_fontsize"
            android:padding="@dimen/overview_welcome_msg_padding" />

        <TextView
            android:id="@+id/overview_last_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your last login is at 12/06/2015 3:20PM"
            android:textSize="@dimen/overview_welcome_msg_fontsize"
            android:padding="@dimen/overview_welcome_msg_padding" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_financial"
                android:textSize="@dimen/overview_heading_fontsize"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/overview_portfolio"
                android:textSize="@dimen/overview_heading_fontsize"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>