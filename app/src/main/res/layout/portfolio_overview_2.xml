<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/overview_page_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As of 3rd July 2015 (GMT +8)"
            android:textSize="@dimen/updated_time_fontsize"
            android:id="@+id/latest_update_time"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Asset Value"
            android:id="@+id/textView4"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 1.2m"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/overview_total_value_fontsize"
            android:layout_gravity="center_horizontal"
            android:id="@+id/overview_total_asset_value"
            android:paddingBottom="7dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:id="@+id/textView4"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.5"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:id="@+id/spinner2"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:background="@drawable/overview_investment_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investment"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 1.2M"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:id="@+id/gain_or_loss"
                            android:padding="0dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.8%"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:id="@+id/textView6"
                                android:textColor="#105811"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$123,123,123"
                                android:textColor="#225326"
                                android:textStyle="bold"
                                android:id="@+id/textView5" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:background="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:id="@+id/button4"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:background="@drawable/overview_cash_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Deposits"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"
                        android:id="@+id/textView7"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$ 600K"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:id="@+id/button4"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:background="@drawable/overview_insurance_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insurance"
                        android:textSize="25sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"
                        android:id="@+id/textView7"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$ 600K"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Button
                    android:background="@color/insurance_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:id="@+id/button4"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:background="@drawable/overview_other_assets_background">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Assets"
                        android:textSize="24dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 1.2M"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:id="@+id/gain_or_loss"
                            android:padding="0dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.8%"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:id="@+id/textView6"
                                android:textColor="#105811"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$123,123,123"
                                android:textColor="#225326"
                                android:textStyle="bold"
                                android:id="@+id/textView5" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:background="@color/other_assets_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Details"
                    android:id="@+id/button4"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>

