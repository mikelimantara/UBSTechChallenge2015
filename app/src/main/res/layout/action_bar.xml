<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_layout_height"
    android:background="#00ff00"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/action_bar_content_height"
        android:layout_height="@dimen/action_bar_content_height"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_content_height"
        android:layout_toRightOf="@id/logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="Elite Bank"
        android:textSize="@dimen/action_bar_title_fontsize" />

</RelativeLayout>